QWidget {
    background-color: #4e5863;
    padding: 6.5px;
    border-radius: 5px;
    max-height: 22px;
}

QLabel {
    color: Snow;
    font-size: 10pt;
    font-weight: bold;
}

QPushButton {
    color: #00E7FF;
    font-size: 10pt;
    font-weight: bold;
    min-width: 50px;
}
QPushButton:hover {
    color: #ffffff;
    background-color: Teal;
}

#CloseButton {
    font-size: 18pt;
    min-width: 40px;
}
#CloseButton:hover {
    background-color: #fa100a;
}